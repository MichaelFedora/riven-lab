{
    "compileOnSave": false,
    "compilerOptions": {
      "outDir": "./stage",
      "baseUrl": "src",
      "module": "es2015",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "checkJs": true,
      "target": "es5",
      "lib": [
        "es6",
        "dom"
      ]
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.js"
    ]
  }
  